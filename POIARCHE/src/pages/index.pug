include ../components/mixins/page
include ../components/mixins/btn
include ../components/mixins/portfolioCard
include ../components/mixins/serviceCard
include ../components/mixins/jobCard
include ../components/mixins/modalForOrder
include ../components/mixins/caseRowPart
include ../components/mixins/caseTextPart

+page('Главная', 'index-page', true)

    .container                
        section.section(id='portfolio')
            h2.section__title Кейсы
            .portfolio
                +portfolioCard('1', 'БЦ Миллениум', 'portfolio.html')
                +portfolioCard('1', 'Марта. Виртуальный учитель', null)
                +portfolioCard('1', 'Bright Mind Center', null)
                +portfolioCard('1', 'БЦ Миллениум', null)
                +portfolioCard('1', 'БЦ Миллениум', null)
                +portfolioCard('1', 'БЦ Миллениум', null)

        section.section(id='service')
            h2.section__title Услуги
            .service
                +serviceCard('Site', 'Сайты', ['от 80.000₽', '7 дней на разработку', 'что-то еще', 'и еще что-то'])
                +serviceCard('Logo', 'Логотипы', ['от 80.000₽', '7 дней на разработку', 'что-то еще', 'и еще что-то'])
                +serviceCard('Name', 'Нейминг', ['от 80.000₽', '7 дней на разработку', 'что-то еще', 'и еще что-то'])
                +serviceCard('Identity', 'Айдентика', ['от 80.000₽', '7 дней на разработку', 'что-то еще', 'и еще что-то'])
                +serviceCard('Mascot', 'Маскоты', ['от 80.000₽', '7 дней на разработку', 'что-то еще', 'и еще что-то'])
        
        section.section(id='job')
            h2.section__title Вакансии
            .jobs
                +jobCard('1', 'Дизайнер', ['от 80.000₽', '7 дней на разработку', 'что-то еще', 'и еще что-то'])
                +jobCard('2', 'Менеджер', ['от 80.000₽', '7 дней на разработку', 'что-то еще', 'и еще что-то'])
                +jobCard('3', 'Иллюстратор', ['от 80.000₽', '7 дней на разработку', 'что-то еще', 'и еще что-то'])

        section.section(id='about')
            h2.section__title О нас
            .about 
                img.about__img-top(src="./assets/images/about-img1.jpg", alt="Картинка")
                +caseRowPart('about-img2.jpg', 'Описание', [
                    'Составление детального плана и структуры сайта, учитывающего потребности и желания арендаторов и посетителей бизнес-центра.',
                    'Составление детального плана и структуры сайта, учитывающего потребности и желания арендаторов и посетителей бизнес-центра.',
                    'Создание информационного раздела, содержащего подробную информацию о бизнес-центре, его услугах, возможностях и преимуществах.',
                    'Разработка интерактивной карты бизнес-центра, позволяющей пользователям легко найти нужный офис или помещение.',
                ])
                img.about__img-bottom(src="./assets/images/about-img3.jpg", alt="Картинка")
                +caseTextPart('Описание', [
                    'Составление детального плана и структуры сайта, учитывающего потребности и желания арендаторов и посетителей бизнес-центра.',
                    'Создание информационного раздела, содержащего подробную информацию о бизнес-центре, его услугах, возможностях и преимуществах.',
                    'Разработка интерактивной карты бизнес-центра, позволяющей пользователям легко найти нужный офис или помещение.',
                ])

        section.section(id='contact')
            h2.section__title Контакты
            .contact
                .contact__card
                    img.contact__img(src="./assets/images/white-block.png", alt="Картинка")
                    h3.contact__title ТГ
                    +btn('contact__btn btn--big') Написать
                        svg.service-card__arrow.white-arrow(width="21" height="23" viewBox="0 0 21 23")
                            use(xlink:href='#whiteArrow')
                .contact__card
                    img.contact__img(src="./assets/images/white-block.png", alt="Картинка")
                    h3.contact__title Почта
                    +btn('contact__btn') Написать
                        svg.service-card__arrow.blue-arrow(width="21" height="23" viewBox="0 0 21 23")
                            use(xlink:href='#blueArrow')

        +modalForOrder(true, 'modal-order')
        +modalForOrder(false, 'modal-job')


